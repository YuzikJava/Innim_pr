<Page x:Class="INNIM_1._2.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:INNIM_1._2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      >

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF6F76DE" Offset="0"/>
                <GradientStop Color="#FFA4ACCE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Width="302" Height="322" CornerRadius="11,11,11,11"/>
        <Border Background="WhiteSmoke" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="320" CornerRadius="10,10,10,10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/VisiblInnim.png"  Width="100" Height="100"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="190" Height="200">
            <Label Content="Логин:" Foreground="Black"/>
            <TextBox x:Name="Log" Foreground="#FF404040">
                <TextBox.Background>
                    <SolidColorBrush Color="White" Opacity="0"/>
                </TextBox.Background>
                <TextBox.BorderBrush>
                    <SolidColorBrush Color="#FFABADB3" Opacity="1"/>
                </TextBox.BorderBrush>
            </TextBox>
            <Label Content="Пароль:" Foreground="Black"/>
                <PasswordBox x:Name="Pass" MaxLength="8" Foreground="#FF404040">
                    <PasswordBox.Background>
                        <SolidColorBrush Color="White" Opacity="0"/>
                    </PasswordBox.Background>
                </PasswordBox>
                <Button Content="Войти" FontSize="22" Margin="0, 15, 0 ,0" Click="BtnLogin_Click" BorderBrush="#FF404040" Foreground="Black" Cursor="Hand">
                    <Button.Background>
                        <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
